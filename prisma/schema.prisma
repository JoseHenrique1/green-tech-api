// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  email    String @unique
  name     String
  password String
}

model Agricultor {
  id           String   @id @default(uuid())
  imagem       String?
  nome         String
  email        String   @unique
  telefone     String   @unique
  senha        String
  tamanho      Float
  latitude     String
  longitude    String
  tiposCultivo String
  produtos     Produto[]
  avaliacoes Avaliacao[]
}

model Estabelecimento {
  id           String   @id @default(uuid())
  email        String   @unique
  telefone     String   @unique
  imagem       String?
  nome         String
  senha        String
  latitude     String
  longitude    String
  avaliacoes Avaliacao[]
}

model Produto {
  id               String   @id @default(uuid())
  imagem           String?
  nome             String
  preco            Float
  disponibilidade  String
  certificacoes    String
  quantidade       Int
  agricultorId     String
  agricultor       Agricultor @relation(fields: [agricultorId], references: [id]) 
}

model Avaliacao {
  agricultor       Agricultor     @relation(fields: [idAgricultor], references: [id])
  idAgricultor     String 
  estabelecimento   Estabelecimento @relation(fields: [idEstabelecimento], references: [id])
  idEstabelecimento String
  nota Int 

  @@id([idAgricultor, idEstabelecimento])
}
