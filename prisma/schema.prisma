// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  email    String @unique
  name     String
  password String
}

model Agricultor {
  id           String   @id @default(uuid())
  imagem       String?
  nome         String
  email        String   @unique
  telefone     String   @unique
  senha        String
  tamanho      Float
  latitude     String
  longitude    String
  tiposCultivo String
  produtos     Produto[]
  encomenda Encomenda[]
}

model Estabelecimento {
  id           String   @id @default(uuid())
  email        String   @unique
  telefone     String   @unique
  imagem       String?
  nome         String
  senha        String
  latitude     String
  longitude    String
  encomenda Encomenda[]
}

model Produto {
  id               String   @id @default(uuid())
  imagem           String?
  nome             String
  preco            Float
  disponibilidade  String
  certificacoes    String
  quantidade       Int
  agricultorId     String
  agricultor       Agricultor @relation(fields: [agricultorId], references: [id]) 
}

model Encomenda {
  id                String   @id @default(uuid())
  nome              String
  quantidade        Int
  preco             Float
  status            String   @default("Pendente")
  agricultorId      String?
  agricultor        Agricultor? @relation(fields: [agricultorId], references: [id])
  estabelecimentoId String
  estabelecimento   Estabelecimento @relation(fields: [estabelecimentoId], references: [id])
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}